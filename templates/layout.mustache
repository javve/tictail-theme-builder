<!DOCTYPE html>
<html lang="en">
<head>

    <title>
        {{store_name}}
        {{! Add the label of the current navigation item on list pages }}
        {{#list_page}}{{#navigation}}{{#is_current}}- {{label}}{{/is_current}}{{/navigation}}{{/list_page}}
        {{! Add the product title on product pages }}
        {{#product_page}}{{#product}}- {{title}}{{/product}}{{/product_page}}
        {{! Add "About" on the about page }}
        {{#about_page}}- {{#lang}}About{{/lang}}{{/about_page}}
    </title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <link href="{{assets_url}}/771/css/anythingslider.css" rel="stylesheet" type="text/css">
    <link href="{{assets_url}}/shared/css/base.css" rel="stylesheet" type="text/css">
    <link href='//fonts.googleapis.com/css?family=Abel' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Arvo:400,700' rel='stylesheet' type='text/css'>

    <link href="/style.css" rel="stylesheet" type="text/css">
    <link href="/dropkick.css" rel="stylesheet" type="text/css">

    <!--[if lt IE 9]>
    <script src="{{assets_url}}/shared/js/html5shiv.js"></script>
    <![endif]-->
</head>
<body class="{{#navigation}}{{#is_current}}{{#has_children}}navigation-open{{/has_children}}{{/is_current}}{{/navigation}}">

<nav class="navigation{{#navigation}}{{#is_current}}{{#has_children}} open{{/has_children}}{{/is_current}}{{/navigation}}">
    <ul>
        <li class="navigation_item {{#list_page}}{{#no_current_navigation}}selected{{/no_current_navigation}}{{/list_page}}">
            <a href="{{store_url}}">
                {{#lang}}All items{{/lang}}
            </a>
        </li>
        {{#navigation}}
        <li class="navigation_item {{#is_current}}selected{{/is_current}}">
            <a href="{{url}}">
                {{label}}
            </a>
            {{#is_current}}
                {{#has_children}}
                    <ul class="sub_navigation">
                        {{#children}}
                            <li {{#is_current}} class="selected"{{/is_current}}>
                                <a href="{{url}}">
                                    {{label}}
                                </a>
                            </li>
                        {{/children}}
                    </ul>
                {{/has_children}}
            {{/is_current}}
        </li>
        {{/navigation}}
    </ul>
    <ul class="mobile-only">
        <li class="store_link {{#about_page}}selected{{/about_page}}">
            <a href="{{store_url}}/about">
                {{#lang}}About{{/lang}}
            </a>
        </li>
        {{#store_blog_url}}
        <li class="store_link">
            <a href="{{store_blog_url}}" target="_blank">
                {{#lang}}Blog{{/lang}}
            </a>
        </li>
        {{/store_blog_url}}
        <li>
            {{#return_policy}}
                {{#lang}}Return Policy{{/lang}}
            {{/return_policy}}
        </li>
        <li>
            {{#terms}}
                {{#lang}}Terms &amp; Conditions{{/lang}}
            {{/terms}}
        </li>
    </ul>
</nav>

<div class="page">

    <div class="logotype-container {{#logotype}}with_logotype{{/logotype}} {{#no_logotype}}without_logotype{{/no_logotype}}">
        <a class="logotype" href="{{store_url}}">
            {{#logotype}}
                <img src="{{url-500}}" alt="{{store_name}}">
            {{/logotype}}
            {{#no_logotype}}
                <span class="store_name">
                    {{store_name}}
                </span>
            {{/no_logotype}}
        </a>
    </div>

    <a href="#" class="burger">
        <span class="line"></span>
        <span class="line"></span>
        <span class="line"></span>
    </a>

    <div class="search-box">
        <a href="#" class="search-icon">Search</a>
        {{{search}}}
    </div>

    <div class="content_container">
        <div class="content_container_inner">
            {{{yield}}}
        </div>
    </div>

    <footer>
        <ul>
            <li id="about_link" class="desktop_only {{#about_page}}selected{{/about_page}}">
                <a href="{{store_url}}/about">
                    {{#lang}}About{{/lang}}
                </a>
            </li>
            {{#store_blog_url}}
            <li id="blog_link" class="desktop_only store_link">
                <a href="{{store_blog_url}}" target="_blank">
                    {{#lang}}Blog{{/lang}}
                </a>
            </li>
            {{/store_blog_url}}
            <li class="desktop_only">
                {{#return_policy}}
                    {{#lang}}Return Policy{{/lang}}
                {{/return_policy}}
            </li>
            <li class="desktop_only">
                {{#terms}}
                    {{#lang}}Terms &amp; Conditions{{/lang}}
                {{/terms}}
            </li>
            {{#store_email}}
                <li class="footer-contact">
                    {{#lang}}Contact{{/lang}}: <a href="mailto:{{store_email}}">{{store_email}}</a>
                </li>
            {{/store_email}}
        </ul>
    </footer>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script src="{{assets_url}}/shared/js/jquery.dropkick-1.3.3-min.js"></script>
<script>
$('.tictail_variations_select').dropkick({
    width: 160,
    height: 30
});
</script>

<script src="{{assets_url}}/122675/js/jquery.magnific-popup.min.js"></script>
<script src="{{assets_url}}/122675/js/adomas.javascript-mouse-wheel.js"></script>
<script>


var device;

var init = {
    start: function() {
        if ($(window).width() > 575) {
            init.desktop();
        } else {
            init.mobile();
        }
        set.lightbox();
        set.horizontalScroll();
        set.search();
        $('.burger').click(set.burger);
    },
    restart: function() {
        if ($(window).width() > 575) {
            init.desktop();
        } else {
            init.mobile();
        }
    },
    desktop: function() {
        if (device !== "desktop") {
            init.reset();
        }
        device = "desktop";
        set.bodyHeight();
        set.pageWidth();
        if ($('#products').size() > 0) {
            set.productListWidth();
        }
        if ($('#product').size() > 0) {
            set.productPageColumns();
            set.productPageWidth();
        }
        set.verticalAlign();
    },
    mobile: function() {
        if (device !== "mobile") {
            init.reset();
        }
        device = "mobile";
    },
    reset: function() {
        var navigation = $('.navigation');
        if (device == "desktop") {
            navigation.removeClass('open');
            $('body').removeClass('navigation-open');
            navigation.hide();
        } else {
            navigation.slideUp();
        }
    }
};

var set = {
    lightbox: function() {
        $('.product_images a, .product_image_primary_link').magnificPopup({
            type: 'image',
            gallery:{ enabled:true }
        });
    },
    horizontalScroll: function() {
        var wait = false;
        $("html, body, *").mousewheel(function(e, delta) {
            var target = e.target || e.srcElement;
            if ($(target).closest('.navigation').size() == 0) {
                if (!wait && device === "desktop") {
                    e.preventDefault();
                    $('.content_container')[0].scrollLeft -= (delta * 30);
                    wait = true;
                    setTimeout(function() { wait = false}, 5);
                }
            }
        });
    },
    bodyHeight: function() {
        $('body').height($('html').height() - 20 - parseInt($('body').css('padding-top'), 10));
    },
    pageWidth: function() {
        $('.page').width($(window).width());
    },
    productListWidth: function() {
        var totalWidth = 0;
        $('.product_list li').each(function() {
            totalWidth += $(this).outerWidth(true);
        });
        $('.content_container_inner').width(totalWidth);
    },
    productPageWidth: function() {
        var totalWidth = 0,
            productsImagesWidth = 0,
            relatedProductsWidth = 0;

        $('.product_images img').each(function() {
            productsImagesWidth += $(this).outerWidth(true);
        });

        relatedProductsWidth += $('.related_products_title').outerWidth(true);
        $('.product_list li').each(function() {
            relatedProductsWidth += $(this).width();
        });
        $('.related_products').width(relatedProductsWidth+30);

        totalWidth += $('.product_info').outerWidth(true);
        totalWidth += productsImagesWidth;
        totalWidth += relatedProductsWidth;
        $('.content_container_inner').width(totalWidth+40);
    },
    productPageColumns: function() {
        var columns = 1;
        while ($('.product_info').height() > $('.content_container_inner').height() && columns < 5) {
            columns++;
            $('.product_info').addClass('column'+columns);
        }
    },
    burger: function(e) {
        e.preventDefault();
        var navigation = $('.navigation');
        if (device == "desktop") {
            navigation.show();
            if (navigation.hasClass('open')) {
                navigation.removeClass('open');
                $('body').removeClass('navigation-open');
            } else {
                navigation.addClass('open');
                $('body').addClass('navigation-open');
            }
        } else {
            if (navigation.is(':visible')) {
                navigation.slideUp();
            } else {
                navigation.slideDown();
            }
        }
        return false;
    },
    search: function() {
        var searchBox = $('.search-box');
        $('.search-icon').click(function(e) {
            e.preventDefault();
            if (searchBox.hasClass('open')) {
                searchBox.removeClass('open');
            } else {
                searchBox.addClass('open');
            }
            return false;
        });
    },
    verticalAlign: function() {
        var contentHeight = $('.content_container').height(),
            windowHeight = $(window).height(),
            marginTop = windowHeight/2 - contentHeight/2 - $('.logotype-container').outerHeight();

        $('.logotype-container').css('margin-top', marginTop+'px');
    }
};


$(window).resize(init.restart);
$(window).load(init.start);

</script>

